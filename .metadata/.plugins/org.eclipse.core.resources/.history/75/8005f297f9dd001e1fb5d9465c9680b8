    var count = 0;



    window.onload = function viewAllProducts() {
      fetch('http://localhost:8888/Products/getAllProducts')
        .then(response => response.json())
        .then(data => {
          var products = data;

          console.log(products)

          for (var i = 0; i < products.length; i++) {
            var product = products[i];
            const tr = document.createElement('tr');
            const trContent = `
    <td><img src=${product.image1} alt='Product Image' class='imgOne' width='100' height='100'></td>
    <td>${product.productBrand}</td>
    <td>${product.productName}</td>
    <td>${product.productType}</td>
    <td class = 'salePrice'>₹ ${product.salePrice}</td>
    <td class = 'salePrice'>₹ ${product.markedPrice}</td>
    <td>${product.discountPercentage}%</td>
    <td class='lastTD'><button type='button' class='delete' onclick='deleteProduct(${product.productId})'>Delete</button> <button type='button' class='update' onclick='updateProduct(${product.productId})'>Update</button></td>

    `;


            tr.innerHTML = trContent;
            document.querySelector('table tbody').appendChild(tr);

          }

        })
        .catch(error => console.log(error));
    }





    function deleteProduct(productId) {
      console.log(productId)
      fetch('http://localhost:8888/Products/deleteProduct/' + productId, {
        method: 'DELETE'
      })
        .then(response => {
          // Handle successful response
          alert("Deleted successfully")
          // Reload the table after deleting the product
          window.location.reload()
        })
        .catch(error => {
          console.log(error);
        });
    }

    // function updateProduct(productId) {
    //   // Handle update product functionality
    // }

    var updateproductid = 0;

    function updateProduct(productId) {

      let Blur = document.getElementById("blur")
      Blur.classList.toggle('active')

      var forms = document.getElementById("form-containerupdate");
      forms.style.display = "block";
      updateproductid = productId;
    }
    // updateFormdiv
    function updatingProduct() {

      var form = document.getElementById("updateForm");
      var formData = new FormData(form);
      const image1 = formData.get("image1");
      const image2 = formData.get("image2");
      const image3 = formData.get("image3");
      const productBrand = formData.get("productBrand");
      const productName = formData.get("productName");
      const productType = formData.get("productType");
      const description = formData.get("description");
      const salePrice = formData.get("salePrice");
      const markedPrice = formData.get("markedPrice");
      const isAvailable = formData.get("isAvailable");
      const discountPercentage = formData.get("discountPercentage");
      const totalSold = formData.get("totalSold");
      const quantity = formData.get("quantity");
      const rating = formData.get("rating");

     const data = {productBrand,productName, productType,description,salePrice,markedPrice,isAvailable,discountPercentage,totalSold,quantity,rating} 
     console.log(data)
      form.style.display = "block";

      fetch('http://localhost:8888/Products/updateProduct/' + updateproductid, {
        method: 'PUT',
      //   body: formData
      // })
      //   .then(response => {
      //     // Handle successful response
      //     window.location.reload() // Reload the table after updating the product
      //   })
      //   .catch(error => {
      //     console.log(error);
      //   });
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ image1, image2,image3,productBrand,productName, productType,description,salePrice,markedPrice,isAvailable,discountPercentage,totalSold,quantity,rating})
    })
    .then(response => response.json())
    .then(data => {
      // Handle the response from the backend API
      console.log(data);
      // const formContainer = document.getElementById('form-container');
    // formContainer.style.display = "none";
    alert("Product updated Successfully")
    closeUpdateForm()
    window.location.reload()
      // Hide the form
      // formContainer.classList.add('hidden');
    })
    .catch(error => console.error(error));
    }
    // document.getElementById("viewAllButton").addEventListener("click", viewAllProducts);


    function showSearchById() {
      // alert("id form working")
      var searchById = document.getElementById("searchById");
      if (searchById.style.display === "none") {
        searchById.style.display = "block";
      } else {
        searchById.style.display = "none";
      }
    }


    function searchById() {
      var productId = document.getElementById("productId").value;

      fetch('http://localhost:8888/Products/getProductById/' + productId)
        .then(response => response.json())
        .then(data => {
          var products = data;
          var tableHTML = "<table><thead><tr><th>Image</th><th>Product Brand</th><th>Product Name</th><th>Product Type</th><th>Sale Price</th><th>Marked Price</th><th>Discount Percentage</th><th>Actions</th></tr></thead><tbody>";
          console.log(products.productBrand);

          var product = products;
          tableHTML += "<tr>";
          tableHTML += "<td><img src='" + product.image1 + "' alt='Product Image' width='100' height='100'></td>";
          tableHTML += "<td>" + product.productBrand + "</td>";
          tableHTML += "<td>" + product.productName + "</td>";
          tableHTML += "<td>" + product.productType + "</td>";
          tableHTML += "<td>" + "₹" + product.salePrice + "</td>";
          tableHTML += "<td>" + "₹" + product.markedPrice + "</td>";
          tableHTML += "<td>" + product.discountPercentage + "%" + "</td>";
          tableHTML += "<td class='lastTD'><button type='button' class='delete' onclick='deleteProduct(" + product.productId + ")'>Delete</button> <button type='button' class='update' onclick='updateProduct(" + product.productId + ")'>Update</button><button type='button' class='closesingleTable' onclick='closeSingleTable()'>Close</button></td>";
          tableHTML += "</tr>";


          tableHTML += "</tbody></table>";
          document.getElementById("productTableContainer").innerHTML = tableHTML;
          var searchById = document.getElementById("searchById");
          searchById.style.display = "none";
        })
        .catch(error => {
          console.log(error);
          console.log("error")
        });
    }




    function showSearchByName() {
      // alert("name form working")
      var showSearchByName = document.getElementById("showSearchByName");
      if (showSearchByName.style.display === "none") {
        showSearchByName.style.display = "block";
      } else {
        showSearchByName.style.display = "none";
      }
    }






    function searchByName() {
      var productName = document.getElementById("productNames").value;
      console.log(productName)
      fetch('http://localhost:8888/Products/searchByName/' + productName)
        .then(response => response.json())
        .then(data => {
          var products = data;
          var tableHTML = "<table><thead><tr><th>Image</th><th>Product Brand</th><th>Product Name</th><th>Product Type</th><th>Sale Price</th><th>Marked Price</th><th>Discount Percentage</th><th>Actions</th></tr></thead><tbody>";
          console.log(data);
          for (var i = 0; i < products.length; i++) {
            var product = products[i];
            tableHTML += "<tr>";
            tableHTML += "<td><img src='" + product.image1 + "' alt='Product Image' width='100' height='100'></td>";
            tableHTML += "<td>" + product.productBrand + "</td>";
            tableHTML += "<td>" + product.productName + "</td>";
            tableHTML += "<td>" + product.productType + "</td>";
            tableHTML += "<td>" + "₹" + product.salePrice + "</td>";
            tableHTML += "<td>" + "₹" + product.markedPrice + "</td>";
            tableHTML += "<td>" + product.discountPercentage + "%" + "</td>";
            tableHTML += "<td class='lastTD'><button type='button' class='delete' onclick='deleteProduct(" + product.productId + ")'>Delete</button> <button type='button' class='update' onclick='updateProduct(" + product.productId + ")'>Update</button><button type='button' class='closesingleTable' onclick='closeSingleTable()'>Close</button></td>";
            tableHTML += "</tr>";
          }

          tableHTML += "</tbody></table>";
          document.getElementById("productTableContainer").innerHTML = tableHTML;
        })
        .catch(error => {
          console.log(error);
          console.log("error")
        });
    }



    function showSearchByBrand() {
      // alert("working")

  <div id="preloader"></div>


  <script src="assets/js/main.js"></script>
  <script>
	  
	  const courseId = localStorage.getItem('courseId');

    // Step 2: Fetch the course details from the API
    fetch(`http://localhost:8888/course/getCourseById/${courseId}`)
        .then(response => response.json())
        .then(course => {
            // Step 3: Update HTML elements with fetched course details

            // Updating course banner image
            document.querySelector('.gallery-img-1 img').src = course.banner;

            // Updating course name
            document.getElementById('house-title').textContent = course.subject;

            // Updating course starting and ending dates
            const startDateDiv = document.querySelector('.check-form div:nth-child(1) h4');
            const endDateDiv = document.querySelector('.check-form div:nth-child(2) h4');
            startDateDiv.textContent = course.startingDate;
            endDateDiv.textContent = course.endingDate;

            // Updating course price
            document.querySelector('.guest-field h4').textContent = `$${course.price}`;

            // Updating instructor name
            document.querySelector('.host h2').textContent = `Instructed By ${course.instructor.firstname}`;

            // Updating course description and subject
            document.querySelector('.details-list li:nth-child(1) span').textContent = course.subject;
            document.querySelector('.details-list li:nth-child(2) span').textContent = course.description;

        })
        .catch(error => console.error('Failed to fetch course details:', error));

    // Step 4: Redirect to /payments URL on button click
    document.getElementById('submitbtn').addEventListener('click', function(e) {
        e.preventDefault(); // Prevent form from submitting traditionally
        window.location.href = '/payments';
    });
});
	
}
displayCourseDetails();
	  
  </script>
